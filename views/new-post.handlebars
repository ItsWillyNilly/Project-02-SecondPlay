<div class="container">
  <h1>Create a New Post</h1>
  <form id="new-listing-form">

    <div class="form-group">
      <label for="title">Title:</label>
      <input type="text" id="title" name="title" class="input" required>
    </div>

    <div class="form-group">
      <label for="description">Description:</label>
      <textarea id="description" name="description" class="input" required></textarea>
    </div>

    <div class="form-group">
      <label for="price">Price:</label>
      <input type="number" id="price" name="price" class="input" required>
    </div>

    <div class="form-group">
      <label for="condition">Condition:</label>
      <input id="condition" name="condition" class="input" required>
    </div>

    <div class="btn-container">
      <button id="create-listing-btn" type="submit" class="btn">Create Post</button>
    </div>
  </form>
</div>

<script src="/js/new-post.js"></script>